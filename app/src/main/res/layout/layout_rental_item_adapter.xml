<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/black"
    >


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:layout_margin="8dp"

        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_rental_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:text="App Teacher"
            android:fontFamily="@font/sf_pro_text_medium"
            android:onClick="onClick"
            android:textAlignment="center"
            android:textColor="@color/app_theme_yellow_color"
            />
        <TextView
            android:id="@+id/tv_days_remaining_rental"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:fontFamily="@font/sf_pro_text_medium"
            android:text="days Remaining "
            android:textAlignment="center"
            android:textColor="@android:color/white"
            />

    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnViewDetailsRental"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/round_button_yellow_border_black_solid"
        android:textColor="@color/app_theme_yellow_color"
        android:layout_margin="10dp"
        android:layout_weight="0.1"
        android:textSize="14dp"
        android:fontFamily="@font/sf_pro_text_medium"
        android:text="View Details"/>
</LinearLayout>