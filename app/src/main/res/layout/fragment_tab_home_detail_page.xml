<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_bg_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/imageViewDetailPage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    app:srcCompat="@drawable/app_logo" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:fontFamily="@font/sf_pro_text_semibold"
                    android:text="Malgudi days"
                    android:onClick="onClick"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingTop="2dp"
                android:layout_gravity="start"
                android:layout_marginStart="5dp"
                >
                <TextView
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/searchResultYear"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2020"
                    android:gravity="center"
                    android:fontFamily="@font/sf_pro_text_medium"
                    android:textColor="@color/app_theme_yellow_color"
                    android:textSize="4sp"/>

                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/searchResultYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dot1"
                    android:layout_marginStart="2dp"
                    android:scaleType="fitCenter"
                   android:src="@drawable/doted_circle_small"/>
                <TextView
                    app:layout_constraintStart_toEndOf="@+id/dot1"
                    android:id="@+id/homeDetailCategoryType1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:layout_marginStart="2dp"
                    android:gravity="center"
                    android:text="Tullu"
                    android:fontFamily="@font/sf_pro_text_medium"
                    android:textColor="@color/app_theme_yellow_color"
                    android:textSize="4sp"/>
                <ImageView
                    app:layout_constraintStart_toEndOf="@+id/homeDetailCategoryType1"
                    android:layout_width="1dp"
                    android:id="@+id/dot2"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/doted_circle_small"/>
                <TextView
                    app:layout_constraintStart_toEndOf="@+id/dot2"
                    android:id="@+id/homeDetailCategoryType2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:text="Drama"
                    android:gravity="center"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/sf_pro_text_medium"
                    android:textColor="@color/app_theme_yellow_color"
                    android:textSize="4sp"/>
                <ImageView
                    app:layout_constraintStart_toEndOf="@+id/homeDetailCategoryType2"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:id="@+id/dot3"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/doted_circle_small"/>
                <TextView
                    app:layout_constraintStart_toEndOf="@+id/dot3"
                    android:id="@+id/homeDetailCategoryDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:gravity="center"
                    android:text="154 mins"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/sf_pro_text_medium"
                    android:textColor="@color/app_theme_yellow_color"
                    android:textSize="4sp"/>
                <ImageView
                    app:layout_constraintStart_toEndOf="@+id/homeDetailCategoryDuration"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:id="@+id/dot4"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/doted_circle_small"/>
                <TextView
                    android:id="@+id/searchResultType_icon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:maxLines="1"
                    app:layout_constraintStart_toEndOf="@+id/dot4"
                    android:layout_gravity="center"
                    android:fontFamily="@font/sf_pro_text_medium"
                    android:layout_weight="1"
                    android:textColor="@color/app_theme_yellow_color"
                    android:textSize="14sp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/short_description_home_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:fontFamily="@font/sf_pro_text_medium"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi porttitor tortor ut interdum volutpat. Sed congue, purus quis egestas posuere, est ipsum vulputate augue, sit amet rutrum purus sapien eget odio. Mauris pulvinar eleifend elit,"
                    android:onClick="onClick"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/homeDetailMore"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:ellipsize="end"
                    android:text="More"
                    android:layout_gravity="right"
                    android:textColor="@color/app_theme_yellow_color"
                    android:textSize="14sp"/>
                <Button
                    android:id="@+id/buttonHomeDetailSubscribeNow"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:drawableLeft="@drawable/exo_icon_play"
                    android:background="@color/app_theme_yellow_color"
                    android:textColor="@color/black"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:fontFamily="@font/sf_pro_text_medium"
                    android:text="Start Watching"/>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="0dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/buttonConnectTV"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textColor="@color/white"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:drawablePadding="12dp"
                    android:drawableLeft="@drawable/ic_baseline_cast_connected_24"
                    android:fontFamily="@font/sf_pro_text_medium"
                    android:text="Connect TV"/>

                <Button
                    android:id="@+id/buttonWatchTrailer"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@color/black"
                    android:textColor="@color/white"
                    android:drawableLeft="@drawable/films_"
                    android:layout_marginEnd="24dp"
                    android:drawablePadding="20dp"
                    android:fontFamily="@font/sf_pro_text_medium"
                    android:text="Watch Trailer"/>



            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>